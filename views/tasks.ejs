<% layout('layouts/boilerplate') %> 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task List</title>
</head>

<body>
    <div class="container border rounded">
        <form action="/tasks/new" method="GET">
            <button class="btn btn btn-success"><strong>CREATE TASK</strong></button>
        </form>
    </div>

    <div>
        <h2><strong>TASK LIST</strong></h2>
        <ul>
            <% for(const task of tasks){ %>
                <div class="card" style="width: 27rem;">
                    <div class="card-body p-3 mb-2 bg-secondary text-white">
                        <form action="/tasks/<%=task._id%>">
                            <button class="btn btn-success"><%= task.title  %> </button>
                        </form>
                        <br>

                        <label for="progress"><strong>PROCESS TIME</strong></label>
                        <div class="progress">
                            <div id = "progress" class="progress-bar bg-info" role="progressbar" aria-label="Info example" style='width: <%= task.time%>% ' aria-valuenow="60" aria-valuemin="20" aria-valuemax='<%= task.time%>'></div>
                          </div>
                    </div>
                </div>


            <% } %>  
        </ul>
    </div>
</body>
</html>